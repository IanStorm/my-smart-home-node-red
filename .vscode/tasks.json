{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "build",
			"type": "shell",
			"command": "docker build -t my-smart-home-node-red .",
			"problemMatcher": [],
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"label": "Docker pull",
			"type": "shell",
			"command": "docker pull ianstorm/dev-settings-sync",
			"problemMatcher": []
		},
		{
			"label": "run (dev)",
			"type": "shell",
			"command": "docker run --rm -i -t -p 1880:1880 -v ${PWD}:/data --env-file ./credentials/docker-env.list my-smart-home-node-red",
			"problemMatcher": [],
			"dependsOn": [ "build" ]
		},
		{
			"label": "sync",
			"type": "shell",
			"command": "docker run -t -v ${PWD}/:/mnt/ ianstorm/dev-settings-sync sync",
			"problemMatcher": [],
			"dependsOn": [
				"Docker pull"
			]
		}
	]
}
